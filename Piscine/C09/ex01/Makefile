NAME = libft
DIR_SRC = src/
DIR_OBJ = obj/
LIBFT = libft/libft.a
CC = cc 
CFLAGS = -Wall -Wextra -Werror
LDFLAGS = -lreadline
RM = rm -f

SRCS =  $(wildcard $(DIR_SRC)*.c) \

OBJS = $(SRCS:$(DIR_SRC)%.c=$(DIR_OBJ)%.o)


# Colors
RESET = \033[0m
BOLD = \033[1m
RED = \033[91m
GREEN = \033[92m
YELLOW = \033[33m
ORANGE = \033[93m
BLUE = \033[94m



all: $(NAME)

$(DIR_OBJ)%.o: $(DIR_SRC)%.c
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@echo "$(BOLD)$(BLUE)------------------------------------------$(RESET)"
	@echo "$(BOLD)$(RED)ðŸ› ï¸ ðŸš§        Compilation started       ðŸš§ðŸ› ï¸$(RESET)"
	@echo "\n"
	@echo "$(BOLD)$(ORANGE)â³      Compilation in progress...      â³$(RESET)"
	@make -sC ./libft
	@echo "\n"
	@$(CC) $(CFLAGS) -o $(NAME) $(OBJS) $(LIBFT) $(LDFLAGS) -lXext -lX11
	@echo "$(BOLD)$(GREEN)ðŸŽ†           Compilation clear          ðŸŽ†$(RESET)"
	@echo "$(BOLD)$(BLUE)------------------------------------------$(RESET)"

clean:
	@make clean -sC libft
	@rm -rf $(DIR_OBJ)
	@echo "$(BOLD)$(YELLOW)ðŸ§¹ðŸ§¼     Cleaned .o Cub3d's files     ðŸ§¼ðŸ§¹$(RESET)"
	@echo "\n"

fclean: clean
	@$(RM) $(NAME)
	@make fclean -sC libft
	@echo "$(BOLD)$(YELLOW)ðŸ§¹ðŸ§¼        Cleaned Cub3d exec        ðŸ§¼ðŸ§¹$(RESET)"
	@echo "\n"

re: fclean all